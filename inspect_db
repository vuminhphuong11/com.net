import sqlite3

def show_users():
    conn = sqlite3.connect("chat.db")
    c = conn.cursor()
    c.execute("SELECT username, password FROM users")
    rows = c.fetchall()
    conn.close()

    print("ðŸ“‹ Danh sÃ¡ch tÃ i khoáº£n trong chat.db:")
    for user, pw in rows:
